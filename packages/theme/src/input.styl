$prefix = 'l-input'

@keyframes blink
    from
        border 2px dashed $g

    to
        border 2px solid transparent

large-size()
    height 40px
    line-height 40px

middle-size()
    height 36px
    line-height 36px

small-size()
    height 24px
    line-height 24px

.{$prefix}
    display inline-block

    .{$prefix}__wrapper
        position relative
        display block

        .{$prefix}__inner
            display inline-block
            padding 0 15px
            width 100%
            outline none
            border 2px solid transparent
            border-radius 4px
            background-color #fff
            color $p
            transition border-color .3s cubic-bezier(.645, .045, .355, 1)

            &:focus
                animation blink 1s infinite alternate-reverse

            &:placeholder-shown
                text-overflow ellipsis

            &::placeholder
                color: $p + 50%

        .{$prefix}__suffix
            position absolute
            top 2px
            right 3px
            bottom 2px
            padding 0 4px
            background-color #fff
            text-align center

            .{$prefix}__suffix_close
                cursor pointer

                &+.{$prefix}__suffix_icon
                    padding-left 1px

            .{$prefix}__suffix_icon
                cursor pointer

        .{$prefix}__advice
            position absolute
            top 54px
            right 2px
            left 2px

            .{$prefix}__advice-wrapper__arrow
                position absolute
                top -16px
                left 36px
                z-index 182
                width 0
                height 0
                border 8px solid transparent
                border-bottom-color #fff

            .{$prefix}__advice-wrapper
                border-radius 4px
                background-color #fff
                box-shadow $shadow

                .{$prefix}__advice-item
                    position relative
                    overflow hidden
                    padding 4px 8px
                    list-style none
                    text-overflow ellipsis
                    cursor pointer
                    user-select none

                    &:hover
                        background-color $p
                        color $o

    &.{$prefix}_large
        .{$prefix}__inner
            font-size 16px
            large-size()

        .{$prefix}__suffix
            line-height 36px

        .{$prefix}__append
            large-size()

        .{$prefix}__prepend
            large-size()

    &.{$prefix}_middle
        .{$prefix}__inner
            font-size 14px
            middle-size()

        .{$prefix}__suffix
            line-height 32px

        .{$prefix}__append
            middle-size()

        .{$prefix}__prepend
            middle-size()

    &.{$prefix}_small
        .{$prefix}__inner
            font-size 14px
            small-size()

        .{$prefix}__suffix
            line-height 20px

        .{$prefix}__append
            small-size()

        .{$prefix}__prepend
            small-size()

    &.{$prefix}_use-append
        .{$prefix}__inner
            border-top-right-radius 0
            border-bottom-right-radius 0

        .{$prefix}__append
            display inline-block
            padding 0 8px
            border 2px dashed $g
            border-left none
            border-top-right-radius 4px
            border-bottom-right-radius 4px
            background-color $p
            vertical-align top

    &.{$prefix}_use-prepend
        .{$prefix}__inner
            border-top-left-radius 0
            border-bottom-left-radius 0

        .{$prefix}__prepend
            display inline-block
            padding 0 8px
            border 2px dashed $g
            border-left none
            border-top-left-radius 4px
            border-bottom-left-radius 4px
            background-color $p
            vertical-align top

.l-textarea
    display inline-block
    width 100%
    font-size 14px

    .l-textarea__inner
        box-sizing border-box
        padding 5px 15px
        width 100%
        outline none
        border 2px solid transparent
        border-radius 4px
        color $p
        line-height 1.5
        resize vertical
        transition border-color .3s cubic-bezier(.645, .045, .355, 1)

        &:focus
            animation blink 1s infinite alternate-reverse

        &:placeholder-shown
            text-overflow ellipsis

        &::placeholder
            color: $p + 50%