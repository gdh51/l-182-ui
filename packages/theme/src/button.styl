button-disabled($border, $background, $color)
    if ($border)
        border-color $border + 50%

    if ($background)
        background-color $background + 50%

    if ($color)
        color $color + 50%

button-plain($border, $background, $color)
    if ($border)
        border-color $border - 20%

    if ($background)
        background-color $background + 80%

    if ($color)
        color $color - 15%

.l-button
    display inline-block
    box-sizing border-box
    padding 12px 20px
    outline none
    border 1px solid #fff
    border-radius 4px
    text-align center
    white-space nowrap
    font-weight 500
    font-size 14px
    line-height 1
    cursor pointer
    transition all .3s ease

    &_text
        padding-right 0
        padding-left 0
        border-color transparent
        background-color transparent
        color $g

        &:hover
            color $g + 20%

        &.disabled
            button-disabled(false, false, $g + 20%)

    &_eva
        border-color $g
        background-color $p
        color $g

        &:hover
            border-color $o
            background-color $p + 10%

        &:active
            box-shadow 0 0 0 3px $p + 5%

        &.disabled
            button-disabled($g, $p, $g)

        &.is-plain
            button-plain($g, $p, $g)

            &:hover
                button-plain($g + 80%, #fff, $g + 15%)

    &_default
        border-color $p + 80%
        background-color #fff
        color $p + 15%

        &:hover
            border-color $p + 60%
            background-color $p + 80%
            color $p

        &:active
            box-shadow 0 0 0 3px $p + 50%

        &.disabled
            button-disabled($p + 80%, #fff, $p + 15%)

        &.is-plain
            button-plain($p + 80%, #fff, $p + 15%)

    &.disabled
        cursor not-allowed

    &_medium
        padding 10px 20px
        border-radius 4px
        font-size 14px

    &_small
        padding 9px 15px
        border-radius 3px
        font-size 12px

    &_mini
        padding 7px 15px
        border-radius 3px
        font-size 12px

    &.is-round
        padding 12px 23px
        border-radius 20px

    &.is-circle
        padding 12px
        border-radius 50%

    & + &
        margin-left 10px