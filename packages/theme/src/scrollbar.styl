.l-scrollbar
    position relative
    overflow hidden

    .l-scrollbar__wrap
        overflow auto

        &.l-scrollbar__wrap--hidden-default::-webkit-scrollbar
            width 0
            height 0

    .l-scrollbar__bar
        position absolute
        right 2px
        bottom 2px
        z-index 1
        background-color unset

        &.is-vertical
            top 2px
            width 6px

        &.is-horizontal
            left 2px
            height 6px

        &.is-scrolling
            .l-bar
                opacity 1

        &:hover
            .l-bar
                opacity 1

        .l-bar
            opacity 0

            &:hover
                background: $lg1 - 20%

            &.is-candy:hover
                border 2px dashed $lg2 - 20%
                background-color: $lo2 - 20%

            &.is-eva:hover
                background-color: $g2 - 20%

    &.is-pending
        visibility hidden